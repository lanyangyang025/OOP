package shape;

import java.awt.Color;
import java.awt.Graphics;

/**
 * The Class AShape is an abstract class.
 * The Class AShape describes a general shape.
 * 
 * @author Chen Zeng, cz39@rice.edu
 * @author Yiqing Lu, yl128@rice.edu
 * @version 1.0.20170826.1
 * @since 1.0.20170826.1
 *
 */

public abstract class AShape {
	/**
	 * The x-coordinate of the AShape.
	 */
	protected int x_position;

	/**
	 * The y-coordinate of the AShape.
	 */
	protected int y_position;
	/**
	 * The color of the AShape.
	 */
	protected Color color;

	/**
	 * The width of the AShape.
	 */
	protected int width;

	/**
	 * The height of the AShape.
	 */
	protected int height;

	/**
	 * Set the value of x-coordinate of this AShape.
	 * @param value The x-coordinate of this AShape.
	 */
	public void setX_position(int value) {
		this.x_position = value;
	}

	/**
	 * Set the value of y-coordinate of this AShape.
	 * @param value The y-coordinate of this AShape.
	 */
	public void setY_position(int value) {
		this.y_position = value;
	}

	/**
	 * @return Get the value of x-coordinate of this AShape.
	 */
	public int getX_position() {
		return this.x_position;
	}

	/**
	 * @return Get the value of y-coordinate of this AShape.
	 */
	public int getY_position() {
		return this.y_position;
	}

	/**
	 * Set the value of color of this AShape.
	 * @param value The color of the AShape.
	 */
	public void set_color(Color value) {
		this.color = value;
	}

	/**
	 * @return Get the value of color of this AShape.
	 */
	public Color get_color() {
		return this.color;
	}

	/**
	 * Set the value of width of this AShape.
	 * @param value The width of the AShape.
	 */
	public void set_width(int value) {
		this.width = value;
	}

	/**
	 * Set the value of height of this AShape.
	 * @param value The height of the AShape.
	 */
	public void set_height(int value) {
		this.height = value;
	}

	/**
	 * @return Get the value of width of this AShape.
	 */
	public int get_width() {
		return this.width;
	}

	/**
	 * @return Get the value of height of this AShape.
	 */
	public int get_height() {
		return this.height;
	}

	/**
	 * An abstract method to paint a graph of this AShape. 
	 * @param g An Graphics object to paint this AShape.
	 */
	public abstract void paint(Graphics g);
}
